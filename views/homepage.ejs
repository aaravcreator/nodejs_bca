

<%- include('partials/header') %>

  <!-- Hero Section -->
  <section class="bg-blue-50 py-20">
    <div class="max-w-6xl mx-auto px-6 text-center">
      <h2 class="text-4xl font-bold text-blue-800 mb-4">Professional Solutions for Your Business</h2>
      <p class="text-lg text-gray-600 mb-6">We help you grow with tailored strategies, expert advice, and modern technology.</p>
      <a href="#" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition">Get Started</a>
    </div>
  </section>

  <!-- Services Section -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-6 text-center">
      <h3 class="text-3xl font-semibold mb-10">Our Services</h3>
    
      <div class="grid md:grid-cols-3 gap-10">

        <% services.forEach(service=>{ %>

        <div class="
         <% if(service.featured) { %>
            bg-blue-100
            <% } else { %>
                bg-white 
            <% } %>
                p-6 shadow-lg rounded-lg">
          <h4 class="text-xl font-semibold mb-2"> <%= service.name %> </h4>
          <p class="text-gray-600"> <%= service.description %> </p>
        </div>


       <% }) %>


       
   
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="bg-gray-50 py-16">
    <div class="max-w-5xl mx-auto px-6 text-center">
      <h3 class="text-3xl font-semibold mb-6">Why Choose Us</h3>
      <p class="text-gray-600 max-w-3xl mx-auto">With years of experience and a client-first mindset, we provide reliable solutions that adapt to your unique challenges. Partner with us for innovation, trust, and measurable success.</p>
    </div>
  </section>

<section class="bg-gray-50 py-16">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-800">What Our Clients Say</h2>
    <p class="mt-4 text-gray-600 text-lg">Trusted by professionals across industries</p>

    <div class="mt-12 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <!-- Testimonial 1 -->
      <div class="bg-white p-6 border-l-4 border-blue-500 rounded-2xl shadow-md text-left transform transition duration-300 hover:-translate-y-2 hover:shadow-xl">
        <p class="text-gray-700">“Their service has completely transformed the way we work. The team is incredibly responsive, and the results exceeded our expectations.”</p>
        <div class="mt-4">
          <p class="font-semibold text-gray-800">John M.</p>
          <p class="text-sm text-gray-500">CEO of TechNova</p>
        </div>
      </div>

      <!-- Testimonial 2 -->
      <div class="bg-white p-6 border-l-4 border-green-500 rounded-2xl shadow-md text-left transform transition duration-300 hover:-translate-y-2 hover:shadow-xl">
        <p class="text-gray-700">“We’ve seen a 40% increase in conversions since switching. The user experience is sleek, fast, and reliable — everything we hoped for.”</p>
        <div class="mt-4">
          <p class="font-semibold text-gray-800">Priya R.</p>
          <p class="text-sm text-gray-500">Founder of GreenEdge</p>
        </div>
      </div>

      <!-- Testimonial 3 -->
      <div class="bg-white p-6 border-l-4 border-pink-500 rounded-2xl shadow-md text-left transform transition duration-300 hover:-translate-y-2 hover:shadow-xl">
        <p class="text-gray-700">“From start to finish, it was seamless. Their attention to detail and customer-first approach really stood out.”</p>
        <div class="mt-4">
          <p class="font-semibold text-gray-800">Alex T.</p>
          <p class="text-sm text-gray-500">Marketing Director at FlexPay</p>
        </div>
      </div>
    </div>
  </div>
</section>



  <!-- Contact CTA -->
  <section class="bg-blue-600 text-white py-16">
    <div class="max-w-6xl mx-auto px-6 text-center">
      <h3 class="text-3xl font-semibold mb-4">Ready to Transform Your Business?</h3>
      <p class="mb-6">Reach out today and discover what we can achieve together.</p>
      <a href="#" class="bg-white text-blue-600 font-semibold px-6 py-3 rounded-lg hover:bg-gray-100 transition">Contact Us</a>
    </div>
  </section>

  

<%- include('partials/footer') %>