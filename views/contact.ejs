<%- include('partials/header') %>

  <!-- Contact Section -->
  <main class="max-w-5xl mx-auto my-12 p-6 bg-white shadow-md rounded-xl">
    <h2 class="text-2xl font-semibold text-blue-800 mb-6">Contact Us</h2>

    <!-- Contact Info -->
    <div class="mb-8 space-y-3">
      <p><strong>📍 Address:</strong> 123 Paint Street, Rainbow City, NY 10001</p>
      <p><strong>📞 Phone:</strong> (123) 456-7890</p>
      <p><strong>📧 Email:</strong> contact@colorcraftpaints.com</p>
      <p><strong>🕒 Working Hours:</strong> Mon - Fri, 9 AM to 6 PM</p>
    </div>

    <!-- Contact Form -->
    <form class="grid grid-cols-1 gap-6 md:grid-cols-2"  method="POST" >
      <div class="col-span-1 md:col-span-2">
        <label class="block text-sm font-medium mb-1">Full Name</label>
        <input type="text" placeholder="Your name" name="name"
               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-500">
      </div>

      <div>
        <label class="block text-sm font-medium mb-1">Email</label>
        <input type="email" placeholder="you@example.com" name="email"
               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-500">
      </div>

      <div>
        <label class="block text-sm font-medium mb-1">Phone</label>
        <input type="tel" placeholder="(123) 456-7890" name="phone"
               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-500">
      </div>

      <div class="col-span-1 md:col-span-2">
        <label class="block text-sm font-medium mb-1">Message</label>
        <textarea rows="5" placeholder="Your message" name="message"
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-500"></textarea>
      </div>

      <div class="col-span-1 md:col-span-2 text-right">
        <button type="submit"
                class="bg-blue-800 hover:bg-blue-700 text-white px-6 py-2 rounded-md transition">
          Send Message
        </button>
      </div>
    </form>
  </main>

<%- include('partials/footer') %>